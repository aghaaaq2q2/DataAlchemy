DataAlchemy
# DataAlchemy

import json
import csv
import logging

logging.basicConfig(level=logging.INFO)
logger = logging.getLogger("DataAlchemy")

def read_json(filename):
    with open(filename, 'r') as f:
        data = json.load(f)
    logger.info(f"JSON data loaded from file: {filename}")
    return data

def write_csv(data, filename):
    with open(filename, 'w', newline='') as f:
        writer = csv.DictWriter(f, fieldnames=data[0].keys())
        writer.writeheader()
        writer.writerows(data)
    logger.info(f"CSV data written to file: {filename}")

def main():
    json_filename = "data.json"
    csv_filename = "data.csv"
    
    data = read_json(json_filename)
    write_csv(data, csv_filename)
    logger.info("DataAlchemy completed.")

if __name__ == "__main__":
    main()
